extends bootstrap_base
block head
  title 后台管理 - NODE-PI
block content
  .container
    .row
      if !data.user
        .col-xs-12.col-md-4.col-md-offset-4
          form(style='margin-top: 10rem;' action='/m' method='POST')
            .form-group
              label username:password
              input.form-control(type="text" name="usernameAndPassword" placeholder='node-pi:123456789')
              br
              input.form-control.btn-success(type='submit' value='submit')

      else
        br
        .col-xs-12.col-md-4
          a.btn.btn-success(href=`/m/add`) 文章上传、图片上传、增加分类

      br
